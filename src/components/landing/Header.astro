---
import { GiFoxHead } from "react-icons/gi";
import { TiThMenu } from "react-icons/ti";
import { IoIosCloseCircle } from "react-icons/io";
import { HERO } from "../../constants/general.constants";
---

<header
  class="fixed flex justify-between items-center bg-gradient-to-r from-green-500 to-emerald-400 w-full p-2 px-3 md:p-4"
>
  <div class="hover:text-white active:text-white">
  <a
    href={`#${HERO}`}
    class="flex items-center active:text-white gap-2 cursor-pointer rounded-xl"
  >
    <GiFoxHead className="text-black hover:text-slate-800 active:text-slate-700" size="30" />
    <h1 class="md:text-xl font-bold text-black hover:text-slate-800 active:text-slate-700">Raikonif Developer</h1>
  </a>
  </div>
  <TiThMenu id="menu" size="20" className="cursor-pointer md:hidden hover:text-slate-800 active:text-slate-700 text-black"/>
  <IoIosCloseCircle id="menu_close" size="20" className="hidden cursor-pointer md:hidden hover:text-slate-800 active:text-slate-700 text-black"/>
  <ul id="menu_list" class="hidden md:flex flex-col bg-gradient-to-r md:from-transparent md:to-transparent md:flex-row gap-4 fixed right-0 w-full md:static md:w-fit top-12 p-2 md:p-0 md:bg-transparent">
    <li
      class="md:text-xl font-bold cursor-pointer rounded-2xl hover:text-black"
    >
      <a href="/projects">
      Projects
      </a>
    </li>
    <li
      class="md:text-xl font-bold cursor-pointer text-black rounded-2xl active:bg-green-500/60"
    >
      <a href="/about">
      About
      </a>
    </li>
  </ul>
</header>
