---
const scrollToSection = (sectionId: string = PROJECTS) => {
  console.log("clicked")
  document.getElementById(sectionId)?.scrollIntoView({ behavior: "smooth" });

  };
import { FaArrowAltCircleDown } from "react-icons/fa";
import { HERO, PROJECTS } from "../../constants/general.constants";
---
<script>
  function scrollToSection () {
    console.log("clicked")
    document.getElementById(PROJECTS)?.scrollIntoView({ behavior: "smooth" });
  }
</script>

<section class="px-10 min-h-screen flex pb-20 items-center justify-center w-full" id={HERO}>
  <h1
    class="text-6xl md:text-8xl items-center text-center font-bold bg-gradient-to-r from-green-500 to-emerald-100 bg-clip-text text-transparent"
  >
    Hi! I'm Diego <br /> Software Developer!
  </h1>
  <a href={`#${PROJECTS}`} class="text-4xl md:text-6xl animate-bounce absolute bottom-7 text-green-500 hover:text-green-400 active:text-green-300" onClick={()=>scrollToSection()}>
    <FaArrowAltCircleDown
    className="text-4xl md:text-6xl animate-bounce absolute bottom-7 text-green-500 hover:text-green-400 active:text-green-300"
  />
  </a>
</section>

