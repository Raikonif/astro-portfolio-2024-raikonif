<section class="flex py-10 w-full flex-col">
  <h1 class="text-6xl pb-10 md:text-8xl text-center font-bold bg-gradient-to-r from-green-500 to-emerald-100 bg-clip-text text-transparent">
    Contact Me
  </h1>
  <div class="flex flex-col items-center justify-center">
    <form class="flex flex-col w-full md:w-1/2 gap-4 p-4">
      <input
        type="text"
        placeholder="Name"
        class="p-3 rounded-xl bg-neutral-950 text-white"
      />
      <input
        type="email"
        placeholder="Email"
        class="p-3 rounded-xl bg-neutral-950 text-white"
      />
      <textarea
        placeholder="Message"
        class="p-3 rounded-xl bg-neutral-950 text-white"
      ></textarea>
      <button
        type="submit"
        class="bg-green-500 p-3 font-bold rounded-xl text-black"
      >
        Send
      </button>
    </form>
  </div>
</section>
