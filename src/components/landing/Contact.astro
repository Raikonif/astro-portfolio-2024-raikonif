---
import { FaLinkedin, FaGithub, FaTwitter, FaWhatsapp } from "react-icons/fa";
---

<section class="flex py-10 w-full flex-col">
  <h1
    class="text-6xl pb-10 z-10 md:text-8xl text-center font-bold bg-gradient-to-r from-green-500 to-emerald-100 bg-clip-text text-transparent"
  >
    Social Media and Contact
  </h1>
  <div class="space-x-4 md:space-x-20 lg:space-x-40 mb-4 flex items-center justify-center z-10">
    <a
      href="https://github.com/Raikonif"
      target="_blank"
      class="cursor-pointer hover:text-gray-700 transition-colors"
    >
      <FaGithub className="w-10 h-10 md:h-16 md:w-16" />
      <span class="sr-only">GitHub</span>
    </a>
    <a
      href="https://www.linkedin.com/in/raikonif/"
      target="_blank"
      class="text-sky-700 hover:text-gray-700 transition-colors"
    >
      <FaLinkedin className="w-10 h-10 md:h-16 md:w-16" />
      <span class="sr-only">LinkedIn</span>
    </a>
    <a
      href="https://x.com/Raikonif"
      target="_blank"
      class="text-cyan-500 hover:text-gray-700 transition-colors"
    >
      <FaTwitter className="w-10 h-10 md:h-16 md:w-16" />
      <span class="sr-only">Twitter</span>
    </a>
    <a
      href="https://wa.me/59163142527"
      target="_blank"
      class="cursor-pointer text-green-600 hover:text-gray-700 transition-colors"
    >
      <FaWhatsapp className="w-10 h-10 md:h-16 md:w-16" />
      <span class="sr-only">Whatsapp</span>
    </a>
  </div>
  <div class="flex flex-col items-center justify-center">
    <form class="flex flex-col w-full md:w-1/2 gap-4 p-4 z-10">
      <input type="text" placeholder="Name" class="p-3 rounded-xl bg-neutral-950 text-white" />
      <input type="email" placeholder="Email" class="p-3 rounded-xl bg-neutral-950 text-white" />
      <textarea placeholder="Message" class="p-3 rounded-xl bg-neutral-950 text-white"></textarea>
      <button type="submit" class="bg-green-500 p-3 font-bold rounded-xl text-black"> Send </button>
    </form>
  </div>
</section>
